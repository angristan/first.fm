<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.TopFiveArtistsFragment">

    <TextView
        android:id="@+id/albumName_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/titleTextSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/aNominatedFragment1"
        android:text="@string/top_five_artists_title_value"
        app:layout_constraintVertical_chainStyle="packed"/>

    <fragment
        android:id="@+id/aNominatedFragment1"
        android:name="fr.esgi.firstfm.fragments.ANominatedFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/albumName_text_view"
        app:layout_constraintBottom_toTopOf="@+id/aNominatedFragment2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <fragment
        android:id="@+id/aNominatedFragment2"
        android:name="fr.esgi.firstfm.fragments.ANominatedFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/aNominatedFragment1"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <fragment
        android:id="@+id/aNominatedFragment3"
        android:name="fr.esgi.firstfm.fragments.ANominatedFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/aNominatedFragment2"
        app:layout_constraintBottom_toTopOf="@+id/aNominatedFragment4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <fragment
        android:id="@+id/aNominatedFragment4"
        android:name="fr.esgi.firstfm.fragments.ANominatedFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/aNominatedFragment3"
        app:layout_constraintBottom_toTopOf="@+id/aNominatedFragment5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <fragment
        android:id="@+id/aNominatedFragment5"
        android:name="fr.esgi.firstfm.fragments.ANominatedFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/aNominatedFragment4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>