<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.ANominatedFragment">

    <TextView
        android:id="@+id/rankNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/paddingElement"
        android:paddingEnd="20dp"
        android:text="@string/rank_value"
        android:textSize="@dimen/listValueSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nominatedNameTextView"
        android:textStyle="italic"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/nominatedNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_nominated_artist_name_value"
        android:textSize="@dimen/listValueSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rankNumberTextView"/>

    <ImageView
        android:id="@+id/nominatedPictureImageView"
        android:layout_width="@dimen/topPictureValue"
        android:layout_height="@dimen/topPictureValue"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/paddingElement"
        android:contentDescription="@string/album_image_content_description_default_value"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/default_album_picture" />

</androidx.constraintlayout.widget.ConstraintLayout>